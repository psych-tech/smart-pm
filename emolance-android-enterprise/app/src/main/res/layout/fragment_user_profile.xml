<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/userDashboardTopLayout"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/profileImageSelector"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/user_profile_photo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/userProfileTextViewName"
            android:text="Name: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/userProfileTextViewAge"
            android:text="Age: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/userProfileTextViewProfession"
            android:text="Profession: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userDashboardBottomLayout"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.emolance.enterprise.ui.VerticalTextView
                android:id="@+id/lineChartYAxisLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stress level"
                android:textSize="14sp"
                android:gravity="center"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/userDashboardLineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lineChartXAxisLabel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Test Dates"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>