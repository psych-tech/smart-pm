<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/testImage"
        android:adjustViewBounds="true"
        android:src="@drawable/test_icon_incomplete"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="8"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameText"
            android:text="Dr. Joseph Cooper"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qrText"
            android:layout_marginTop="3dp"
            android:text="QR ID: Emolance 800-810-6330 06-15-2015"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/statusText"
            android:text="Status: Report is Ready"
            android:textColor="#828282"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <View
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <Button
            android:layout_weight="3"
            android:layout_gravity="center"
            android:id="@+id/opButton"
            android:text="Measure"
            android:textSize="16sp"
            android:focusable="false"
            android:textColor="@color/white"
            android:background="@drawable/op_button_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <View
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>