<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/resultColor"
        android:background="@color/red"
        android:layout_margin="12dp"
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="8"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qrText"
            android:layout_marginTop="3dp"
            android:text="QR ID: Emolance 800-810-6330 06-15-2015"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/statusText"
            android:text="Status: Report is Ready"
            android:textColor="#828282"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10/1993"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="11"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="9"
            android:layout_gravity="center"
            android:id="@+id/more_menu_reports"
            android:textSize="16sp"
            android:focusable="false"
            android:src="@drawable/more_horiz"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#00000000"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>