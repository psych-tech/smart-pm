    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:background="#ebebeb" />

        <View
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:background="#ebebeb" />
    </LinearLayout>

    <ImageView
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/profileImageSelector"
        android:adjustViewBounds="true"
        android:src="@drawable/user_profile_default"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:layout_weight="1"
            android:id="@+id/userNameEditText"
            android:hint="User Name"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:nextFocusDown="@+id/firstNameEditText"
            android:background="@drawable/user_profile_field"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/firstNameEditText"
            android:hint="First Name"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:nextFocusDown="@+id/lastNameEditText"
            android:background="@drawable/user_profile_field"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/lastNameEditText"
            android:hint="Last Name"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:nextFocusDown="@+id/emailEditText"
            android:background="@drawable/user_profile_field"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/emailEditText"
            android:hint="Email"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:nextFocusDown="@+id/professionEditText"
            android:background="@drawable/user_profile_field"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <EditText
            android:layout_weight="1"
            android:background="@drawable/user_profile_field"
            android:id="@+id/professionEditText"
            android:hint="Profession"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <Button
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:text="Save"
            android:background="@drawable/save_button_selector"
            android:id="@+id/createButton"
            android:textColor="@color/save_button_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:text="Cancel"
            android:background="@drawable/save_button_selector"
            android:id="@+id/cancelButton"
            android:textColor="@color/save_button_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>