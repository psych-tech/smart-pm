<resources>

    <style name="Theme.Miao" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_miao</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Miao</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Miao</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Miao</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Miao</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Miao</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Miao</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_miao</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_miao</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Miao</item>
        <!--<item name="android:textViewStyle">@style/RobotoTextViewStyle</item>-->
        <!--<item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->
    </style>


    <!--<style name="RobotoTextViewStyle" parent="android:Widget.TextView">-->
