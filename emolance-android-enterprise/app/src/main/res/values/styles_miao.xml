    <style name="ActionBar.Solid.Miao" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_miao</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_miao</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_miao</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Miao</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="ActionBar.Transparent.Miao" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_miao</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Miao</item>
    </style>

    <style name="PopupMenu.Miao" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_miao</item>	
    </style>

    <style name="DropDownListView.Miao" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_miao</item>
    </style>

    <style name="ActionBarTabStyle.Miao" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_miao</item>
    </style>

    <style name="DropDownNav.Miao" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_miao</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_miao</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_miao</item>
    </style>
    
    <style name="ProgressBar.Miao" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_miao</item>
    </style>
    
    <style name="ActionButton.CloseMode.Miao" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_miao</item>
    </style>

    <style name="ActionBarTabTextStyle.Miao" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/tab_bar_text_color_selector</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Miao.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Miao</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Miao</item>
    </style>

</resources>