<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="0.6"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1.8"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/qr_code_background"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:text="QR ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center_vertical"
                android:text="N/A"
                android:textStyle="bold"
                android:id="@+id/qrIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <Button
                android:id="@+id/qrButton"
                android:background="@null"
                android:text="Not You, Rescan?"
                android:textSize="13sp"
                android:textColor="@color/tab_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:background="#ebebeb" />

        <TextView
            android:layout_gravity="center"
            android:text="Your Profile"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:background="#ebebeb" />
    </LinearLayout>

    <ImageView
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/profileImageSelector"
        android:adjustViewBounds="true"
        android:src="@drawable/user_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:layout_weight="1"
            android:id="@+id/nameEditText"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:background="@drawable/user_profile_field"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:layout_weight="1"
                android:id="@+id/ageEditText"
                android:background="@drawable/user_profile_shorter"
                android:hint="Age"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/zipcodeEditText"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/user_profile_shorter"
                android:hint="Zipcode"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <EditText
            android:layout_weight="1"
            android:background="@drawable/user_profile_field"
            android:id="@+id/professionEditText"
            android:hint="Profession"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:text="Save"
            android:background="@drawable/save_button_selector"
            android:id="@+id/createButton"
            android:textColor="@color/save_button_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>