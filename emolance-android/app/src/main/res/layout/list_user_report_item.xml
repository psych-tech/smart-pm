<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/profile_pic"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_weight="2"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/nameText"
            android:layout_alignParentTop="true"
            android:text="Dr. Joseph Cooper"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qrText"
            android:layout_below="@+id/nameText"
            android:layout_marginTop="5dp"
            android:text="QR ID: EMO123"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/statusText"
            android:layout_alignParentBottom="true"
            android:text="Status: Report is Ready"
            android:textColor="#828282"
            android:textSize="13sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <View
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <Button
            android:layout_weight="3"
            android:layout_gravity="center"
            android:id="@+id/opButton"
            android:text="Measure"
            android:textSize="14sp"
            android:focusable="false"
            android:textColor="@color/op_button_color"
            android:background="@drawable/op_button_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <View
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>